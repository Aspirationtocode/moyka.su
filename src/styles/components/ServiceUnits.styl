.service-unit
	margin-bottom 10px
	&__header
		margin-top 30px
		margin-bottom 8px
		font-family RobotoCondensedBold
		font-size 26px

	&-left-part
		display flex
		align-items center

	&-right-part
		flex-shrink 0
		display flex

	&-element
		position relative
		display flex
		align-items center
		justify-content space-between
		width 100%
		margin-bottom 5px
		transition all ease .2s
		padding 4px
		padding-bottom 2px

		&::after
			content ""
			position absolute
			top 100%
			left 4px
			background-color alpha(#95989A, 50%)
			height 1px
			width calc(100% - 8px)
			transition all ease .2s


		&:hover
			background-color alpha(#95989A, 10%)
			cursor pointer

			&::after
				opacity 0

		&__text
			font-size 19px
			font-family RobotoCondensedRegular

		&__price
			margin-left 10px
			line-height 1.2
			font-size 20px
			font-family RobotoCondensedBold
