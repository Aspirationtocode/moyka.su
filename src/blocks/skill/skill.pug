mixin skill(header, text, sum, modificator, serviceTitle)
	.skill
		.skill__header= header
			.skill-header-helper.skill-header-helper--left
			.skill-header-helper.skill-header-helper--right
		.skill__text= text
		div(class=`skill-image skill-image--${modificator}`)
		.skill-info
			.skill-info__sum От #{sum} ₽
			- if (serviceTitle)
				button(class=`skill-info__button skill-info__button--${modificator}` data-remodal-target=`skill-modal--${serviceTitle}`) Подробнее
			- else
				a(class=`skill-info__button skill-info__button--${modificator}` href="./price-list.html#additional-services") Подробнее
