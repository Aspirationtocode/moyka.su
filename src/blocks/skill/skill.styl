$gray-color = #B1AAAA
$big-gap = 30px
$medium-gap = 20px
$small-gap = 10px

$helper-width = 4px
$helper-width-negative = -4px

.skill
	border 1px solid alpha(#777, 10%)
	padding 20px 0
	box-sizing border-box
	background-color #E3E3E3
	box-shadow 10px 10px 18px alpha(#999, 30%)
	border-radius 16px
	flex-grow 1
	margin 30px
	flex-basis calc(25% - 45px)
	transition all linear .1s

	&:hover
		cursor pointer
		transform scale(0.99)

	&:first-child
		margin-left 0

	&:last-child
		margin-right 0

	@media screen and (max-width: 1400px)
		margin 20px
		flex-basis calc(25% - 30px)

	@media screen and (max-width: 1200px)
		margin 40px
		flex-basis calc(50% - 60px)
		&:nth-child(2n)
			margin-right 20px

		&:nth-child(2n+1)
			margin-left 20px

	@media screen and (max-width: 860px)
		margin 18px
		flex-basis calc(50% - 27px)
		&:nth-child(2n)
			margin-right 0

		&:nth-child(2n+1)
			margin-left 0

	@media screen and (max-width: 560px)
		margin 30px
		flex-basis 100%
		margin-bottom 10px
		&:nth-child(2n)
			margin-right 30px

		&:nth-child(2n+1)
			margin-left 30px

	@media screen and (max-width: 460px)
		margin 10px
		&:nth-child(2n)
			margin-right 10px

		&:nth-child(2n+1)
			margin-left 10px

	&__header
		margin-bottom 10px
		position relative
		background-color $gray-color
		font-family RobotoCondensedBold
		font-size 27px
		padding 10px 12px
		padding-right 0
		color #fff

		@media screen and (max-width: 1200px)
			font-size 25px

		&:before
			content ""
			position absolute
			left 0
			top 0
			height 1px
			background-color #fff
			width 100%
			z-index 2

		&:after
			content ""
			position absolute
			left 0
			bottom 0
			height 1px
			background-color #fff
			width 100%
			z-index 2
			transform translateX(-4px)
			width calc(100% + 8px)

	&__text
		font-family RobotoCondensedLight
		font-size 15px
		margin 0 20px
		text-align center
		color $main-dark-color
		@media screen and (max-width: 1200px)
			font-size 18px

		@media screen and (max-width: 960px)
			font-size 16px

	&-image
		border-radius 20px
		margin 0 30px
		height 180px
		margin-top 10px
		margin-bottom 16px

		@media screen and (max-width: 1400px)
			margin-left 14px
			margin-right 14px
			margin-bottom 16px

		@media screen and (max-width: 1200px)
			height 250px
			margin 0 30px
			margin-top 10px
			margin-bottom 16px

		@media screen and (max-width: 960px)
			height 170px

		@media screen and (max-width: 560px)
			height 220px

		@media screen and (max-width: 460px)
			height 170px

		&--1s
			image-bg("body-wash.png")

		&--2s
			image-bg("dry-cleaning.png")

		&--3s
			image-bg("nano-wash.png")

		&--4s
			image-bg("smell-in-car.png")

	&-info
		display flex
		justify-content space-between
		align-items center
		background-color #fff
		padding 10px 14px
		box-sizing border-box
		border 1px solid alpha(#93A5B1, 60%)
		border-left none
		border-right none

		&__sum
			font-family RobotoCondensedBold
			color $main-color
			font-size 24px

			@media screen and (max-width: 600px)
				font-size 22px

		&__button
			background-color $gray-color
			border 3px solid #9A9A9A
			padding 6px 26px
			border-radius 40px
			color #fff
			transition all ease .2s
			outline none

			@media screen and (max-width: 1400px)
				padding 6px 18px

			@media screen and (max-width: 600px)
				padding 2px 14px

			&:hover
				background-color #fff
				color #9A9A9A


.skill-header-helper
	position absolute
	top 0
	background-color $gray-color
	width $helper-width
	height 100%

	&--left
		left $helper-width-negative
		&:before
			position absolute
			left 0
			top -7px
			content ""
			triangle(4px, 7px, "bottomRight", $gray-color)


	&--right
		right $helper-width-negative
		&:before
			position absolute
			left 0
			top -7px
			content ""
			transform rotate(180deg)
			triangle(4px, 7px, "topRight", $gray-color)
