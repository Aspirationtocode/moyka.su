$nav-transition-duration = .4s

$transition-properties = opacity, background-color, color

$nav--dropdown-margin = 18px

.header-nav-wrapper
	z-index 4
	display flex
	justify-content center

	&--mobile
		size(100%, 100vh)
		position absolute
		top 0
		left 0
		padding-top 15vh

		.header-nav
			display flex
			flex-direction column
			justify-content flex-start
			&__element
				margin-right 0
				width 100%
				background-color alpha(#fff, 85%)
				margin-bottom 4px
				border-radius 0

				&:hover
					cursor pointer
				.header-nav__link
					padding 6px 10px
					padding-right 80px
					font-size 24px
					color #111

				&--active
					.header-nav__link
						background-color #fff
						pointer-events auto
						&::after
							transform rotate(-90deg) translateY(1px)

					.header-nav-dropdown
						position static
						padding 0
						width 100%
						transform translateX(0px)
						pointer-events auto
						opacity 1
						background-color alpha($main-dark-color, 55%)

						&__element
							z-index 100
							font-size 16px
							padding 0
							margin-bottom 1px

						&__link
							line-height 1.15
							padding 6px 10px
							font-family RobotoCondensedRegular

						&::before
							display none

				&--with-dot
					margin-right 0
					.header-nav__link
						&::after
							border-radius 0
							right 10px
							triangle(15px, 11px, "bottom", $main-dark-color)

.header-nav
	padding-top 20px
	display flex
	justify-content space-between

	@media screen and (max-width: 740px)
		display none

	&__element
		position relative
		font-size 24px
		margin-right 20px
		border-radius 5px
		transition ease $nav-transition-duration
		transition-property $transition-properties

		&::after
			content ""
			position absolute
			top 100%
			left 0
			size(100%, $nav--dropdown-margin)
			background-color transparent

		@media screen and (max-width: 1460px)
			margin-right 2px
			font-size 22px
			&:nth-child(8)
				display none

		@media screen and (max-width: 1200px)
			font-size 19px
			&:nth-child(7)
				display none

		@media screen and (max-width: 960px)
			font-size 18px
			&:nth-child(5)
				display none

		@media screen and (max-width: 740px)
			&:nth-child(5)
				display block
			&:nth-child(7)
				display block
			&:nth-child(8)
				display block

		@media screen and (min-width: 740px)
			&.header-nav__element--active-pointer-events
				.header-nav__link
					pointer-events auto
			&.header-nav__element--active-hover
				background-color #fff
				.header-nav__link
					color $main-dark-color

				.header-nav-dropdown
					pointer-events auto
					opacity 1

		&:last-child
			margin-right 0
		.header-nav__link
			padding 4px 16px
			white-space nowrap
			position relative
			display block
			text-transform uppercase
			color #fff
			font-family RobotoCondensedRegular

		&--active-page
			background-color #fff
			.header-nav__link
				color $main-dark-color

	&__element--with-dot
		margin-right 25px
		@media screen and (max-width: 1460px)
			margin-right 7px
		.header-nav__link
			pointer-events none
			transition ease $nav-transition-duration
			transition-property $transition-properties
			&::after
				content ""
				position absolute
				top calc(50% - 3px)
				right 4px
				size(6px)
				border-radius 50%
				background-color #fff

				@media screen and (max-width: 1460px)
					top calc(50% - 4px)

.header-nav-dropdown
	z-index 4
	background-color alpha(#FFFFFF, 85%)
	border-radius 5px
	padding 14px 0
	@media screen and (max-width: 1200px)
		padding 7px 0
	pointer-events none
	position absolute
	top "calc(100% + %s)" % ($nav--dropdown-margin)
	left 50%
	transform translateX(-50%)
	@media screen and (min-width: 740px)
		transition opacity ease $nav-transition-duration
	width 260px
	opacity 0

	&:before
		z-index 100
		content ""
		position absolute
		bottom 100%
		left 50%
		transform translateX(-50%)
		triangle(40px, 11px, "top", alpha(#FFFFFF, 85%))

	&--1s
		left 0
		transform translateX(0%)
		&:before
			left 15%

	&__element
		font-family RobotoLight
		text-transform uppercase
		font-size 20px
		margin-bottom 7px

		@media screen and (max-width: 1200px)
			font-size 18px
			margin-bottom 4px

		&:last-child
			margin-bottom 0
		&:hover
			cursor pointer
	&__link
		padding 5px 10px
		display block
		color $main-dark-color
		background-color #fff

.header-nav-mobile
	position relative
	z-index 10
	align-items center
	justify-content space-between
	padding 15px
	display none

	@media screen and (max-width: 740px)
		display flex

	&__logo
		position relative
		top 4px
		image-bg("icons/logo.svg")
		width 210px
		height 40px

	&__burger
		size(36px)
		image-bg("icons/burger.svg")
		&:hover
			cursor pointer

.header-nav-overlay
	z-index 3
	background-color alpha(#111, 85%)
	position fixed
	top 0
	left 0
	height 100vh
	width 100%
	display none

	&.active
		display block
