mixin header-nav(activePage, menuElements)
	.header-nav-overlay
	.header-nav-mobile
		.header-nav-mobile__logo
		.header-nav-mobile__burger
	nav.header-nav-wrapper
		ul.header-nav
			each firstMenu, index in menuElements
				- if (firstMenu.level2)
					li(class=`header-nav__element header-nav__element--${index+1}s header-nav__element--with-dot ${(activePage === firstMenu.level1) ? "header-nav__element--active-page" : ""}`)
						A(href="http://vk.com").header-nav__link= firstMenu.level1
						ul(class=`header-nav-dropdown header-nav-dropdown--${index + 1}s`)
							each secondMenu, index in firstMenu.level2
								li.header-nav-dropdown__element
									a(href="http://vk.com").header-nav-dropdown__link= secondMenu
				- else
					li.header-nav__element
						a(href="http://vk.com").header-nav__link= firstMenu.level1
