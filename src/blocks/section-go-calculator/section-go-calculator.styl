.section-go-calculator
	position relative
	image-bg("calc-bg.png")
	color #fff
	padding 40px 20px
	@media screen and (max-width: 800px)
		padding 30px 10px

	&:before
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background alpha($main-color, 35%)
		pointer-events none


	&__header
		position relative
		z-index 1
		font-family RobotoCondensedBold
		font-size 66px
		text-align center
		line-height 1
		@media screen and (max-width: 800px)
			font-size 50px

	&__text
		position relative
		z-index 1
		font-size 26px
		width 60%
		margin 26px auto
		text-align center

		@media screen and (max-width: 1200px)
			width 80%

		@media screen and (max-width: 800px)
			font-size 22px
			margin 16px auto
			width 90%

	&__button
		position relative
		z-index 1
		font-family RobotoCondensedBold
		text-transform uppercase
		background-color $main-color
		border none
		display block
		margin 0 auto
		padding 12px 80px
		border-radius 30px
		font-size 30px
		box-shadow 5px 5px 11px alpha($main-color, 38%)
		transition all ease .3s
		opacity .92
		@media screen and (max-width: 800px)
			font-size 26px
			padding 10px 50px

		&:hover
			opacity 1
			box-shadow 5px 5px 16px alpha($main-color, 42%)
