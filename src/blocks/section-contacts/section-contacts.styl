.section-contacts
	color $main-dark-color
	section-padding()

	&-key
		font-size 22px
		font-family RobotoCondensedRegular
		display flex
		align-items center
		margin-bottom 10px

		&--map
			align-items flex-start
			flex-direction column

			.section-contacts-value
				border 2px solid alpha($main-color, 40%)
				box-sizing border-box
				display block
				margin-left 0
				width 100%
				height 300px
				margin-top 5px


		@media screen and (max-width: 600px)
			flex-direction column
			align-items flex-start

	&-value
		display inline-block
		margin-left 10px
		background-color #eee
		padding 5px 10px
		color $main-dark-color

		@media screen and (max-width: 600px)
			margin-left 0

	&-logo
		display inline-block
		size(210px, 40px)
		image-bg("icons/logo.svg")
		background-color $main-color
		border 5px solid $main-color
		border-radius 3px
