.header-footer
	position absolute
	bottom 0
	left 0
	width 100%
	display flex
	justify-content space-between
	margin-bottom 20px
	@media screen and (max-width: 740px)
		flex-direction column
		padding-bottom 15px

	&-work-hours
		position relative
		margin-left 20px
		display flex
		flex-direction column
		justify-content center
		align-items center
		font-size 24px

		&:hover
			cursor pointer

		@media screen and (max-width: 740px)
			margin-bottom 10px
			margin-left 0
		&__icon
			position absolute
			top -82px
			image-bg("h24.png")
			size(90px)
			margin-bottom 2px
			@media screen and (max-width: 800px)
				font-size 22px

			@media screen and (max-width: 740px)
				top -88px

		&__text
			position relative
			z-index 1
			white-space nowrap
			text-transform uppercase
			font-family RobotoCondensedLight
			color #fff
			line-height .96

			@media screen and (max-width: 800px)
				font-size 22px

	&-social
		display flex
		align-items center

		@media screen and (max-width: 920px)
			justify-content center

		&__text
			white-space nowrap
			font-family RobotoCondensedLight
			font-size 20px
			color #fff
			margin-right 10px


			@media screen and (max-width: 920px)
				display none

		&__icons
			display flex

			@media screen and (max-width: 740px)
				margin-bottom 10px

		&__icon
			&--instagram
				image-bg("icons/instagram.svg")
				size(40px)
				margin-right 10px

			&--vk
				image-bg("icons/vk.svg")
				size(40px)

	&-mail
		margin-right 20px
		display flex
		align-items center
		@media screen and (max-width: 740px)
			justify-content center
			align-items center
			margin-right 0
		&__icon
			image-bg("icons/mail.svg")
			size(40px)
			margin-right 5px

			@media screen and (max-width: 740px)
				size(30px)

		&__address
			white-space nowrap
			font-family RobotoCondensedRegular
			font-size 24px
			color #fff
			@media screen and (max-width: 800px)
				font-size 22px
