.header
	height 900px
	image-bg("header-bg.png")
	position relative

	@media screen and (max-width: 740px)
		height 600px

	&__appear
		display none
		position absolute
		top 0
		left 0
		size(100%, 100%)
		background-color alpha(#fff, 60%)
		width 10%
		transition linear 2.5s
		transition-property transform, background-color
		opacity 0

		@media screen and (max-width: 740px)
			display none

		&.animated
			opacity 1
			transform translateX(100vw)
			background-color alpha(#fff, 60%)

	&-logo
		position absolute
		top 93px
		left 0
		width calc(210px * 5)
		height calc(40px * 5)
		image-bg("icons/logo.svg")
		opacity 0
		transition all ease .6s
		pointer-events auto

		&.animated
			opacity .95

		&.opacitied
			transition all ease .3s
			opacity .1

		@media screen and (max-width: 1600px)
			width calc(210px * 4)
			height calc(40px * 4)
			top 80px

		@media screen and (max-width: 1280px)
			top 186px
			width calc(210px * 4)
			height calc(40px * 4)

		@media screen and (max-width: 900px)
			top 186px
			width calc(210px * 3.4)
			height calc(40px * 3.4)

		@media screen and (max-width: 740px)
			display none


	&-location-wrapper
		display flex
		justify-content flex-end
		margin-top 20px
		margin-right 20px
		margin-left 20px

		@media screen and (max-width: 740px)
			justify-content center

	&-location
		display flex
		flex-direction column
		text-align right
		@media screen and (min-width: 740px)
			opacity 0
			transform translateY(20px)
		transition ease .6s
		transition-property transform opacity
		@media screen and (max-width: 740px)
			text-align center

		&.animated
			transform translateY(0px)
			opacity 1

		&__text
			font-family RobotoCondensedLight
			font-size 18px
			color #fff
			align-self flex-end
			text-align left

			@media screen and (max-width: 740px)
				text-align center
				align-self center
				margin-bottom 4px

		&__map
			position relative
			size(400px, 280px)
			opacity 0
			transition opacity ease .6s
			border 3px solid #fff
			z-index 200
			pointer-events none

			@media screen and (max-width: 740px)
				float none
				margin 0 auto

			@media screen and (max-width: 420px)
				size(300px, 210px)

			&.active
				pointer-events auto
				opacity 1


		&__button
			background-color #939393
			border none
			display inline-block
			border-radius 30px
			padding 12px 15px
			color #fff
			margin-top 7px
			float right
			transition all ease .2s
			font-family RobotoCondensedRegular
			text-transform uppercase
			outline none
			line-height .8
			margin-bottom 12px
			font-size 14px
			align-self flex-end

			@media screen and (max-width: 740px)
				float none
				padding 14px 18px
				border 2px solid #fff
				align-self center

			&:hover
				cursor pointer
				background-color #fff
				color $main-dark-color
